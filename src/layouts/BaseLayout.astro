---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/water.css">
  </head>
  <body>
    <header>
      <nav>
        <a href="/"><strong>Inicio</strong></a>
        
        <a href="/writing">Publicaciones</a>
        
        <a href="/projects">Proyectos</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <hr />
      <p>
        <small>
          &copy; {new Date().getFullYear()} — Posicionamiento silencioso.
        </small>
      </p>
    </footer>
  </body>
</html>

<style is:global>
  /* Usamos is:global para que Astro no añada IDs a las clases
     y el CSS se aplique directamente a las etiquetas HTML.
  */
  html, body {
    height: 100%;
    margin: 0;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  /* El elemento main se estira para ocupar el espacio libre 
     y empujar al footer al fondo de la pantalla.
  */
  main {
    flex: 1 0 auto;
  }

  footer {
    flex-shrink: 0;
    text-align: center;
    padding-bottom: 1rem;
  }

  header {
    margin-bottom: 2rem;
  }
</style>